<h1 class="editheader">Edit</h1>

<form method="POST" action="/books/<%= book.id %>">
  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Name" class="form-control" value="<%= book.title %>">
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" name="author" id="author" placeholder="Name" class="form-control" value="<%= book.author %>">
  </div>

  <div class="form-group">
    <label for="genre">Genre</label>
    <select name="genre" id="genre" class="form-control select2">
      <% genres.forEach((genre) => { %>
        <option><%= genre %></option>
      <% }) %>
    </select>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" placeholder="Name" class="form-control"><%= book.description %></textarea>
  </div>

  <div class="form-group">
    <label>Image</label>
    <input type="text" name="images[]" class="form-control">
  </div>

  <button class="btn btn-outline-warning">Update</button>
</form>
</main>
