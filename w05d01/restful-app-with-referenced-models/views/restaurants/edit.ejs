<section></section>
<div class="container">
  <h1>Edit</h1>

  <form method="POST" action="/restaurants/<%= restaurant.id %>">
    <input type="hidden" name="_method" value="PUT">
    <div>
      <label for="name">Name</label>
      <input type="text" name="name" id="name" placeholder="Name" value="<%= restaurant.name %>">
    </div>
    <div>
      <label for="website">Website</label>
      <input type="text" name="website" id="website" placeholder="Website" value="<%= restaurant.website %>">
    </div>
    <div>
      <label for="phone">Phone</label>
      <input type="text" name="phone" id="phone" placeholder="Website" value="<%= restaurant.phone %>">
    </div>
    <div>
      <label for="address">Address</label>
      <input type="text" name="address" id="address" placeholder="Address" value="<%= restaurant.address %>">
    </div>
    <div>
      <label for="description">Description</label>
      <textarea name="description" placeholder="Name" ><%= restaurant.description %></textarea>
    </div>
    <div>
      <label>Image</label>
      <input type="text" name="images[]">
    </div>
    <button class="btn btn-outline-danger">Update</button>
  </form>
</div>
