<p id="notice"><%= notice %></p>

<h1>Continents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @continents.each do |continent| %>
      <tr>
        <td><%= continent.name %></td>
        <td class="btn btn-info btn-xs continent"><%= link_to 'Show', continent %></td>
        <td class="btn btn-primary btn-xs continent"><%= link_to 'Edit', edit_continent_path(continent) %></td>
        <td class="btn btn-danger btn-xs continent"><%= link_to 'Destroy', continent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions newcountry">
  <%= link_to 'New Continent', new_continent_path, class: 'btn btn-success btn-lg'%>
</div>
